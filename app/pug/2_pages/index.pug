					li.map_info-item
						.map_info-item-ic: +icon("phone")
						a(href="#") +7 (3424) 200-555
					li.map_info-item
						.map_info-item-ic: +icon("at")
						a(href="#") info@solomon.ru
					li.map_info-item
						.map_info-item-ic: +icon("clock")
