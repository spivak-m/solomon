	.index-block
		.l-wrapper
			h2.index-block_title.like-h1 Соломон это...

			.cards-layout
				.cards-layout_item: +feature("Вкусно", "cookie")
				.cards-layout_item: +feature("Полезно", "plus-circle")
				.cards-layout_item: +feature("Много", "bullseye")
				.cards-layout_item: +feature("Доступно", "wallet")
				.cards-layout_item: +feature("С кешбэком", "percent")
				.cards-layout_item: +feature("Качественно", "feather")
				.cards-layout_item: +feature("Быстро", "shipping-fast")
				.cards-layout_item: +feature("С любовью", "heart-circle")
	
	.map
